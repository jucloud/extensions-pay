{
    "name": "jucloud/extensions-pay",
    "description": "最优雅的在线支付扩展包",
    "keywords": ["alipay", "wechat", "pay"],
    "type": "library",
    "support": {
        "issues": "https://github.com/jucloud/extensions-pay/issues",
        "source": "https://github.com/jucloud/extensions-pay"
    },
    "require": {
        "php": ">=7.1.3",
        "ext-openssl": "*",
        "ext-simplexml":"*",
        "ext-libxml": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "jucloud/core": "*",
        "symfony/http-foundation": "^4.0 || ^5.0.7",
        "symfony/event-dispatcher": "^4.0 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "^1.2",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "JuCloud\\Extensions\\Pay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JuCloud\\Extensions\\Pay\\Tests\\": "tests"
        }
    },
    "license": "MIT"
}
